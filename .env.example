# Database
DATABASE_URL="file:./dev.db"

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET="your_secret_key_here"

# App Configuration
APP_BASE_URL="http://localhost:5173"
PORT=3001

# Shopee Encryption Key (CHANGE IN PRODUCTION!)
MASTER_KEY="your_master_key_for_encryption"

# SMTP Configuration (Optional - for email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# SMTP_FROM="ACHADY <noreply@achady.com.br>"

# VPS API Base URL (if using proxy)
# VPS_API_BASE_URL=http://your-vps-ip:3001/api

# Meta Instagram Webhook Verification Token
# Use a strong random token and configure the same value in Meta Developer Console
META_IG_VERIFY_TOKEN=troque-por-um-token-forte

# Meta Instagram OAuth Configuration
# IMPORTANT: META_APP_ID and META_APP_SECRET must both be from the same Facebook App
# These values can be found in Meta Developer Console > Your App > Settings > Basic
# The token exchange will fail with "Error validating client secret" if these don't match
META_APP_ID="COLOQUE_AQUI"
META_APP_SECRET="COLOQUE_AQUI"
# Replace with your actual domain (must match the redirect URI configured in your Facebook App)
META_IG_REDIRECT_URI="https://your-domain.com/api/meta/auth/instagram/callback"
META_IG_CONFIG_ID="COLOQUE_AQUI"
