generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  passwordHash   String?   // null se for conta apenas OAuth
  emailVerified  Boolean   @default(false)
  verificationToken String?        // token de verificaÃ§Ã£o de email (opcional)
  resetToken        String?        // token de reset de senha (opcional)
  resetTokenExpiry  DateTime?      // expiraÃ§Ã£o do reset de senha

  lastLoginAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // 1:1
  settings       UserSettings?

  // 1:N
  groups                  Group[]
  sessions                Session[]
  oauthAccounts           OAuthAccount[]
  refreshTokens           RefreshToken[]
  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]
  socialAccounts          SocialAccount[]

  // opcional p/ SaaS multi-tenant (time/empresa)
  memberships     Membership[]
}

model UserSettings {
  id                 String    @id @default(cuid())
  userId             String    @unique
  shopeeAppId        String?
  shopeeSecret       String?
  template           String?
  automationActive   Boolean   @default(false)
  intervalMinutes    Int       @default(5)
  startTime          String    @default("07:00")
  endTime            String    @default("23:00")
  scheduleEnabled    Boolean   @default(true)
  lastAutomationRun  DateTime? // Track when automation last ran for this user
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Group {
  id               String   @id @default(cuid())
  userId           String
  name             String
  link             String?
  chatId           String?
  active           Boolean  @default(true)
  keywords         String   @default("") // CSV ou texto livre
  negativeKeywords String   @default("")
  category         String?  // Categoria do grupo (ex: "Casa & DecoraÃ§Ã£o", "Beleza", etc)
  lastMessageSent  DateTime? // Data/hora da Ãºltima mensagem enviada
  
  // Shopee productOfferV2 API parameters
  productCatIds       String?  // JSON array of category IDs, e.g. "[12345, 67890]"
  sortType            Int      @default(2) // Shopee sort type: 1=RELEVANCE, 2=ITEM_SOLD, 3=PRICE_DESC, 4=PRICE_ASC, 5=COMMISSION
  minDiscountPercent  Int?     // Minimum discount percentage filter (0-100)
  minRating           Float?   // Minimum rating filter (0.0-5.0)
  minSales            Int?     // Minimum sales count filter
  
  // Category Rotation Settings
  rotationEnabled           Boolean  @default(true) // Enable automatic category rotation
  rotationEmptyThreshold    Int      @default(3)    // Rotate after X consecutive empty/end results
  rotationCooldownMinutes   Int      @default(15)   // Cooldown per category in minutes
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  rotationState CategoryRotationState?

  @@index([userId])
}

// Runtime state for category rotation per group
model CategoryRotationState {
  id                    String   @id @default(cuid())
  groupId               String   @unique
  currentCategoryIndex  Int      @default(0) // Index into productCatIds array
  currentPageByCategory String   @default("{}") // JSON: { "categoryId": pageNumber }
  emptyStreakByCategory String   @default("{}") // JSON: { "categoryId": emptyCount }
  cooldownUntilByCategory String @default("{}") // JSON: { "categoryId": ISO timestamp }
  seenOfferKeys         String   @default("[]") // JSON array of seen offer itemIds (limited size)
  seenOfferKeysUpdatedAt DateTime @default(now()) // TTL tracking for seen offers
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String   @unique
  expiresAt    DateTime
  ip           String?
  userAgent    String?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model OAuthAccount {
  id               String   @id @default(cuid())
  userId           String
  provider         String   // "google", "github", etc.
  providerAccountId String
  accessToken      String?
  refreshToken     String?
  expiresAt        Int?
  tokenType        String?
  scope            String?
  idToken          String?
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  consumedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  consumedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Opcional: multi-tenant real (um cliente = uma "empresa", com vÃ¡rios usuÃ¡rios)
// Sem enum (SQLite), role como String.
model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships Membership[]
}

model Membership {
  id        String   @id @default(cuid())
  userId    String
  orgId     String
  role      String   @default("OWNER") // OWNER | ADMIN | MEMBER (valida no app)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([userId, orgId])
  @@index([orgId])
  @@index([userId])
}

model Log {
  id           String   @id @default(cuid())
  userId       String
  groupName    String
  productTitle String
  price        String
  status       String   // "SENT", "PENDING", "ERROR"
  errorMessage String?
  timestamp    DateTime @default(now())

  @@index([userId])
}

model SentOffer {
  id       String   @id @default(cuid())
  userId   String
  groupId  String
  itemId   String   // Shopee item ID
  keyword  String?
  sentAt   DateTime @default(now())

  @@unique([userId, groupId, itemId])
  @@index([userId])
  @@index([groupId])
  @@index([itemId])
}

// Social account integrations (Instagram Business, etc.)
model SocialAccount {
  id               String    @id @default(cuid())
  userId           String
  provider         String    // 'instagram', 'facebook', etc.
  pageId           String?   // Facebook Page ID
  igBusinessId     String?   // Instagram Business Account ID
  igUsername       String?   // Instagram username
  pageAccessToken  String?   // Encrypted Page Access Token
  userAccessToken  String?   // Encrypted User Access Token (long-lived)
  expiresAt        DateTime? // Token expiration date
  status           String    @default("connected") // 'connected', 'connected_limited' (no pages but token valid)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([userId])
  @@index([provider])
}

// Instagram Post Cache - stores recent posts for display in the dashboard
model InstagramPostCache {
  id            String    @id @default(cuid())
  userId        String
  igBusinessId  String
  mediaId       String    // Instagram media ID
  caption       String?
  mediaType     String    // IMAGE, VIDEO, CAROUSEL_ALBUM
  mediaUrl      String?
  permalink     String?
  timestamp     DateTime?
  raw           String?   // JSON string for optional raw data
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([igBusinessId, mediaId])
  @@index([userId])
  @@index([igBusinessId])
}

// InstagramRuleStatus: "active" | "paused"

model InstagramRule {
  id           String   @id @default(cuid())
  userId       String
  igBusinessId String
  // If mediaId is null => global rule (applies to all posts)
  mediaId      String?
  keyword      String   // case-insensitive contains match
  replyMessage String   // DM message template
  status       String   @default("active") // "active" | "paused"
  priority     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([igBusinessId])
  @@index([mediaId])
  @@index([status])
  @@unique([igBusinessId, mediaId, keyword])
}

// Instagram automation event log - for idempotency and tracking
model InstagramAutomationEvent {
  id            String   @id @default(cuid())
  igBusinessId  String
  commentId     String   @unique // Unique per comment to prevent duplicate processing
  mediaId       String?
  ruleId        String?
  status        String   // PROCESSED, FAILED
  error         String?
  createdAt     DateTime @default(now())

  @@index([igBusinessId])
  @@index([commentId])
}

// Instagram Auto-Reply Configuration for MVP (comment â†’ DM)
// One global config per connected IG account
model InstagramAutoReply {
  id              String   @id @default(cuid())
  userId          String
  igBusinessId    String   @unique // One config per IG account
  enabled         Boolean  @default(true)
  messageTemplate String   @default("OlÃ¡! Obrigado pelo seu comentÃ¡rio. ðŸ™‚") // Default message
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([igBusinessId])
}

// Instagram Processed Comments for idempotency (prevent duplicate DMs)
model InstagramProcessedComment {
  id            String   @id @default(cuid())
  igBusinessId  String
  commentId     String   @unique // Unique per comment ID
  status        String   @default("PROCESSED") // PROCESSED, FAILED
  dmSent        Boolean  @default(false)
  error         String?
  createdAt     DateTime @default(now())

  @@index([igBusinessId])
  @@index([commentId])
}

// Instagram Post - persists Instagram posts fetched from IG Graph API
model InstagramPost {
  id            String   @id @default(cuid())
  igBusinessId  String
  mediaId       String   @unique
  mediaType     String?
  caption       String?
  mediaUrl      String?
  permalink     String?
  thumbnailUrl  String?
  timestamp     DateTime?
  raw           String?  // JSON string for optional raw data
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([igBusinessId])
  @@index([timestamp])
}
